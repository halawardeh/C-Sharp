@{
    ViewData["Title"] = "profile Page";
}


@section Styles {
    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/profile.css" />
    <style>
        .input {
            width: 140%;
            height: 40px;
            box-sizing: border-box;
            border: 2px solid #2C383C;
            border-radius: 5px;
            padding: 5px 10px 10px;
        }
    </style>
}






<section class="profile">
    <div class="div1" style="background-color: #088178">
        <label for="profileImageInput">
            <img src="/img1/profileImg.png" alt="user" class="img" id="userImage" />
        </label>
        <input type="file" id="profileImageInput" style="display: none" accept="image/*" />
        <div class="profile-info">
            <span id="userFullName"><strong style="font-size: 1.5rem">Hala Bani Hamad</strong></span><br /><br />
            <span id="userEmail">halabanihamad10@gmail.com</span>
        </div>
    </div>
    <div class="div2">
        <form style="margin: 0 40px 40px 40px; text-align: left" class="form">
            <div>
                <p><strong style="font-size: 4rem">My Profile</strong></p>
                <hr style="width: 136%" class="hr" />
            </div>
            <div class="flname">
                <div>
                    <label for="firstName" class="label">First Name</label><br /><br />
                    <input type="text" id="firstName" class="input" placeholder="&nbsp;&nbsp;&nbsp;Hala" disabled />
                    <span id="fname-error" class="error-message"></span>
                </div>
                <div>
                    <label for="lastName" class="label">Last Name</label><br /><br />
                    <input type="text" id="lastName" class="input" placeholder="&nbsp;&nbsp;&nbsp;Bani Hamad" disabled />
                    <span id="lname-error" class="error-message"></span>
                </div>
            </div>
            <div class="info">
                <div>
                    <label for="email" class="label">Email</label><br /><br />
                    <input type="email" id="email" class="input" placeholder="&nbsp;&nbsp;&nbsp;halabanihamad10@gmail.com"
                           disabled />
                </div>
                <div>
                    <label for="gender" class="label">Gender</label><br /><br />
                    <select id="gender" class="input" disabled>
                        <option value="" disabled selected style="text-align: center">
                            Female
                        </option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
            </div>
            <div style="margin-top: 4%">
                <label for="date" class="label">Birthday</label><br /><br />
                <input type="date" class="changepass" id="birthday" placeholder="&nbsp;&nbsp;&nbsp;Birthday" disabled />
                <span id="date-error" class="error-message"></span><br />
            </div>
        </form>
        <!-- <button class="botton" id="editButton">
            <p style="display: inline">Edit&nbsp;&nbsp;</p>
            <img src="..\Images\img\pencil.png" alt="" style="width: 18%" />
          </button> -->
        <div id="twoButtons">
            <button id="resetPasswordButton" onclick="window.location.href='resetPassword.html'">Reset Password</button>
            <button id="editProfile" onclick="window.location.href='editProfile.html'">Edit Profile</button>
        </div>

        <div id="resetPasswordModal" class="modal">
            <div class="modal-content">
                <span id="closeModal" class="close">&times;</span>
                <h3>Reset Password</h3>
                <label class="current" for="currentPassword">Current Password:</label>
                <input type="password" id="currentPassword">
                <label class="new" for="newPassword">New Password:</label>
                <input type="password" id="newPassword">
                <label class="confirmNew" for="confirmPassword">Confirm New Password:</label>
                <input type="password" id="confirmPassword">
                <button id="savePasswordButton">Save Password</button>
            </div>
        </div>


    </div>
</section>






@{
    ViewData["Title"] = "profile";
}
